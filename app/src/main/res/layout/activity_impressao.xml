<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".app.ImpressaoActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnViaCliente"
            android:background="@drawable/rounded_corner"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:textSize="10dp"
            android:text="CLIENTE"></Button>

        <Button
            android:id="@+id/btnViaLoja"
            android:background="@drawable/rounded_corner"
            android:layout_margin="10dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:textSize="10dp"
            android:text="LOJA"></Button>

        <Button
            android:id="@+id/btnViaReduzida"
            android:background="@drawable/rounded_corner"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="REDUZIDO"
            android:textSize="10dp"
            android:textStyle="bold"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cupom"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:elevation="20dp">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/cupom_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:gravity="center"
            android:text="COMNECT PAY SIMULADOR LTDA."
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:text="COMPROVANTE DE PAGAMENTO"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/yellow"
                android:gravity="center"
                android:textSize="16sp"
                android:text="PAGAMENTO: CARTÃO DE CREDITO"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/yellow"
                android:gravity="center"
                android:textSize="21sp"
                android:text="VALOR: R$ 79,90"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/yellow"
                android:gravity="center"
                android:textSize="18sp"
                android:text="BANDEIRA: MaterCard Maestro"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/yellow"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"
                android:text="NUMERO DE PARCELAS: A Vista"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/yellow"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"
                android:text="Cartão: Inter ****1422"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_pagar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_corner"
        android:text="VOLTAR"
        android:textSize="25dp">

    </Button>

</LinearLayout>