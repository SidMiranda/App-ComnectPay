<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment"
    android:background="@drawable/background_home"
    android:orientation="vertical"
    android:layout_marginBottom="50dp"
    android:gravity="bottom">

    <LinearLayout
        android:id="@+id/container"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:visibility="gone"
        android:orientation="vertical">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_pagar"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:backgroundTint="@color/green"
                android:text="Pagar"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:textStyle="bold"
                app:cornerRadius="60dp"
                app:icon="@drawable/ic_action_pay"
                app:iconGravity="top"
                app:iconPadding="0dp"
                app:iconSize="50dp"
                app:iconTint="@color/white">


            </Button>

            <Button
                android:id="@+id/btn_recarga"
                style="@style/btnlook"
                android:text="Recarga"
                app:icon="@drawable/ic_action_recharge"
                app:iconGravity="top"
                app:iconPadding="0dp"
                app:iconSize="45dp">

            </Button>

            <Button
                android:id="@+id/btn_pix"
                style="@style/btnlook"
                android:backgroundTint="@android:color/holo_green_dark"
                android:text="PIX"

                app:icon="@drawable/ic_action_cupom"
                app:iconGravity="top"
                app:iconPadding="0dp"
                app:iconSize="50dp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_cupom"
                style="@style/btnlook"
                android:text="Cupom"
                app:icon="@drawable/ic_action_cupom"
                app:iconGravity="top"
                app:iconPadding="0dp"
                app:iconSize="50dp">

            </Button>

            <Button
                android:id="@+id/btn_extorno"
                style="@style/btnlook"
                android:text="Estorno"
                app:icon="@drawable/ic_action_extorno"
                app:iconGravity="top"
                app:iconPadding="0dp"
                app:iconSize="50dp">

            </Button>

            <Button
                android:id="@+id/btn_btc"
                style="@style/btnlook"
                android:backgroundTint="@android:color/holo_green_dark"
                android:text="Bitcoin"

                app:icon="@drawable/ic_action_btc"
                app:iconGravity="top"
                app:iconPadding="0dp"
                app:iconSize="50dp"></Button>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/banner1"
        />

</LinearLayout>